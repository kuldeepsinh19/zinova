  "private": true,
  "engines": {
    "node": ">=18 <21"
  },
  "scripts": {
    "dev": "next dev",
    "build": "cd src/Infrastructure/Database && npx prisma generate && cd ../../.. && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "cd src/Infrastructure/Database && npx prisma generate",
    "db:migrate": "cd src/Infrastructure/Database && npx prisma migrate dev",
    "db:push": "cd src/Infrastructure/Database && npx prisma db push",
    "db:studio": "cd src/Infrastructure/Database && npx prisma studio",
    "db:seed": "cd src/Infrastructure/Database && npx prisma db seed",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install",
    "postinstall": "cd src/Infrastructure/Database && npx prisma generate"
  },
