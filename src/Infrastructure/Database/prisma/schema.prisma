generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(cuid())
  email             String            @unique
  name              String?
  passwordHash      String
  creditBalance     Int               @default(20)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  businessInquiries BusinessInquiry[]
  imageGenerations  ImageGeneration[]
  transactions      Transaction[]

  @@index([email])
  @@map("users")
}

model Transaction {
  id                String   @id @default(cuid())
  userId            String
  type              String
  amount            Int
  paymentAmount     Decimal? @db.Decimal(10, 2)
  razorpayOrderId   String?
  razorpayPaymentId String?
  status            String
  metadata          Json?
  createdAt         DateTime @default(now())
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

model ImageGeneration {
  id             String   @id @default(cuid())
  userId         String
  inputImageUrl  String
  outputImageUrl String?
  style          String
  creditsUsed    Int
  status         String
  aiProvider     String   @default("gemini")
  errorMessage   String?
  metadata       Json?
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("image_generations")
}

model BusinessInquiry {
  id           String   @id @default(cuid())
  userId       String?
  businessName String
  productType  String
  requirements String
  budget       String
  email        String
  phone        String?
  status       String   @default("NEW")
  createdAt    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([createdAt])
  @@map("business_inquiries")
}

model PortfolioItem {
  id          String   @id @default(cuid())
  title       String
  category    String
  imageUrl    String
  videoUrl    String?
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([category])
  @@index([isActive])
  @@index([order])
  @@map("portfolio_items")
}
