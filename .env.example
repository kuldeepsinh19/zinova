# .env.example - Environment Variables Template

# Copy this file to .env.local and fill in your values

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# Database Connection String
# ============================================
# Get from: Supabase → Settings → Database → Connection String (URI mode)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres"

# ============================================
# AI Service (Gemini)
# ============================================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# ============================================
# Payment (Razorpay) - Optional
# ============================================
# RAZORPAY_KEY_ID=""
# RAZORPAY_KEY_SECRET=""

# ============================================
# Email (Resend) - Optional
# ============================================
# RESEND_API_KEY=""

# ============================================
# App Configuration
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ============================================
# Portfolio Configuration
# ============================================
# Image Source Feature Flag
# 
# Set to "false" (default):
#   - Loads images from local /public/portfolio/ folder
#   - Faster, no external dependencies
#   - Good for development and static portfolios
#
# Set to "true":
#   - Loads images from database URLs (Supabase Storage, Cloudinary, etc.)
#   - Enables dynamic image management via admin panel
#   - Good for production with frequent image updates
#
NEXT_PUBLIC_USE_DB_IMAGES="false"
